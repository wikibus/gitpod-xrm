PREFIX schema: <http://schema.org/>
PREFIX hydra: <http://www.w3.org/ns/hydra/core#>
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix dcterms: <http://purl.org/dc/terms/> .
@prefix sh: <http://www.w3.org/ns/shacl#> .
@prefix wbo: <https://schema.wikibus.org/> .

<shape/magazine>
    a sh:NodeShape ;
    sh:targetClass wbo:Magazine ;
    sh:property
        [
            sh:path dcterms:title ;
            sh:datatype xsd:string ;
            sh:minCount 1 ;
            sh:maxCount 1 ;
        ],
        [
            sh:path dcterms:description ;
            sh:datatype xsd:string ;
            sh:maxCount 1 ;
        ],
        [
            sh:path wbo:issues ;
            sh:nodeKind sh:IRI ;
            sh:class wbo:MagazineIssueCollection ;
            sh:minCount 1 ;
            sh:maxCount 1 ;
            sh:node
                [
                    sh:property
                        [
                            sh:path hydra:memberAssertion ;
                            sh:node <shape/magazine-issues-member-assertions> ;
                            sh:nodeKind sh:BlankNode ;
                        ] ;
                ]
        ]
.

<shape/magazine-issues-member-assertions>
    sh:property
        [
            sh:path hydra:property ;
            sh:hasValue schema:isPartOf ;
            sh:minCount 1 ;
            sh:maxCount 1 ;
        ],
        [
            sh:path hydra:object ;
            sh:nodeKind sh:IRI ;
            sh:class wbo:Periodical ;
            sh:minCount 1 ;
            sh:maxCount 1 ;
        ];
.
