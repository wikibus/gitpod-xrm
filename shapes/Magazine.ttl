PREFIX bibo: <http://purl.org/ontology/bibo/>
PREFIX schema: <http://schema.org/>
PREFIX hydra: <http://www.w3.org/ns/hydra/core#>
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix dcterms: <http://purl.org/dc/terms/> .
@prefix sh: <http://www.w3.org/ns/shacl#> .
@prefix wbo: <https://schema.wikibus.org/> .

<shape/magazine>
    a sh:NodeShape ;
    sh:targetClass wbo:Periodical ;
    sh:property
        [
            sh:path dcterms:title ;
            sh:datatype xsd:string ;
            sh:minCount 1 ;
            sh:maxCount 1 ;
        ],
        [
            sh:path dcterms:description ;
            sh:datatype xsd:string ;
            sh:maxCount 1 ;
        ],
        [
            sh:path wbo:issues ;
            sh:nodeKind sh:IRI ;
            sh:class wbo:IssueCollection ;
            sh:minCount 1 ;
            sh:maxCount 1 ;
            sh:node
                [
                    sh:property hydra:memberAssertion ;
                    sh:node <shape/magazine-issues-member-assertions> ;
                ]
        ]
.

<shape/magazine-issues-member-assertions>
    sh:property
        [
            sh:path hydra:property ;
            sh:hasValue schema:isPartOf ;
            sh:minCount 1 ;
            sh:maxCount 1 ;
        ],
        [
            sh:path hydra:property ;
            sh:nodeKind sh:IRI ;
            sh:minCount 1 ;
            sh:maxCount 1 ;
        ];
.

<shape/magazine-issue>
    sh:targetClass bibo:Issue ;
    sh:property
        [
            sh:path bibo:issue ;
            sh:maxCount 1 ;
            sh:datatype xsd:integer ;
        ],
        [
            sh:path dcterms:date ;
            sh:xone
                (
                    [ sh:datatype xsd:gYearMonth ]
                    [ sh:datatype xsd:date ]
                )
        ],
        [
            sh:path bibo:pages ;
            sh:minCount 1 ;
            sh:maxCount 1 ;
            sh:datatype xsd:integer ;
        ],
        [
            sh:path schema:isPartOf ;
            sh:minCount 1 ;
            sh:maxCount 1 ;
            sh:class bibo:Periodical ;
        ],
        [
            sh:path schema:containedInPlace ;
            sh:maxCount 1 ;
            sh:node 
            [
                sh:property
                [
                    sh:path [ sh:inversePath schema:hasPart ] ;
                    sh:class wbo:StorageContainer ;
                ] ;
            ] ;
        ],
        [
            sh:path dcterms:created ;
            sh:minCount 1 ;
            sh:maxCount 1 ;
            sh:datatype xsd:dateTime ;
        ] ,
        [
            sh:path dcterms:modified ;
            sh:maxCount 1 ;
            sh:datatype xsd:dateTime ;
        ],
        [
            sh:path schema:encoding ;
            sh:maxCount 1 ;
            sh:class schema:ImageObject ;
        ] ;
.
